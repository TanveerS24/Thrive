# ==================== SERVER ENVIRONMENT VARIABLES ====================
# Copy this file to .env and fill in your actual values

# ========== DATABASE ==========
# MongoDB connection URL
# Local development: mongodb://localhost:27017/thrive
# MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/thrive
MONGO_URL=mongodb://localhost:27017/thrive

# ========== SECURITY SECRETS ==========
# Session secret for signing session cookies (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
# IMPORTANT: Change this in production!
SESSION_SECRET=generate_a_random_32_byte_hex_string

# Encryption secret for email/data encryption (256-bit key in base64)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
# IMPORTANT: Keep this safe and never commit it!
ENCRYPTION_SECRET=generate_a_random_32_byte_base64_string

# ========== CORS & NETWORK ==========
# Allowed origin for CORS requests
# Development: http://localhost:5173
# Production: https://yourdomain.com
CORS_ORIGIN=http://localhost:5173

# ========== PORT ==========
# Server port
PORT=3000

# ========== ENVIRONMENT ==========
# development | production
NODE_ENV=development
